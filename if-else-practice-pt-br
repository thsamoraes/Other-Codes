x = int(input("Quantos reais você tem pra ir ao cinema hoje? "))

if x>=50:
    print("Com", x,"reais você compra duas entradas e dois combos!")
else:
    if x>=25:
        print("Com", x,"reais você compra uma entrada e um combo!")
    else:
        if x>=15:
            print("Com", x,"reais você compra uma entrada.")
        else:
            print("Com", x,"reais não da pra sair hoje...")
